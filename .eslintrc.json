{
  "env": {
    "node": true,
    "jest": true,
    "es2022": true
  },
  "extends": ["auto", "plugin:prettier/recommended", "plugin:typescript-sort-keys/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "impliedStrict": "true"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "class-methods-use-this": "off"
  },
  "ignorePatterns": ["node_modules/", "dist/", "commitlint.config.js"]
}
